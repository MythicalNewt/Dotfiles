# i3WM configuration.
#
# Author: Shreyas 
# 
# Based off of autogenerated configuration with a few tweaks.

# Mod key
set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:mononoki-Regular Nerd Font Complete Mono 8

# text rendering and scalability on retina/hidpi displays (thanks to pango).

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# kill focused window
bindsym $mod+Shift+q kill

# color variables
set $bg-color 	         #2f343f
set $inactive-bg-color   #2f343f
set $text-color          #929c9c
set $urgent-text-color   #2ec9c9 
set $inactive-text-color #676E7D
set $urgent-bg-color     #1B60B3
set $border              #bd93f9
set $urgent-border       #00cc00
set $focus-border        #929c9c
set $separator           #757575

# window colors
#                       border             background         text                  indicator     focused-border
client.focused          $bg-color          $bg-color          $text-color           $border       $border
client.unfocused        $inactive-bg-color $inactive-bg-color $inactive-text-color  $border       
client.focused_inactive $inactive-bg-color $inactive-bg-color $inactive-text-color  $border    
client.urgent           $urgent-bg-color   $urgent-bg-color   $urgent-text-color    $border       $urgent-border 

# bar
#bar {
#	font pango:mononoki-Regular Nerd Font Complete Mono 9
#  	status_command i3blocks -c ~/.config/i3/i3blocks.conf
#    position top
#	colors {
